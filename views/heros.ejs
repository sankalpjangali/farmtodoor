<% layout('layout') %>  
<link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

 <!-- Hero Section -->
 <section class="hero-section text-center" style="background-image: url('../images/background_login.webp') ; background-repeat: no-repeat;background-size: cover; background-position: center; width: 100%;
    height: 94vh;
            background-attachment: fixed;">
    <div class="container" style="text-align: center; top:40vh; position: relative; color:white; font-weight: bold;">
        <h1 class="display-4"style=" text-align:center; font-weight:bold " >Fresh from Farm to Your Table</h1>
        <p class="lead ">Support local farmers. Eat fresh. Live healthy.</p>
        <a href="#" class="btn btn-success btn-lg" >Shop Now</a>
    </div>  
</section>

<!-- Features Section -->
<section class="container my-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="feature-icon mx-auto mb-3"><i class="ri-user-fill"></i></div>
            <h3>Local Farmers</h3>
            <p class="text-muted">Connect directly with farmers</p>
        </div>
        <div class="col-md-4">
            <div class="feature-icon mx-auto mb-3"><i class="ri-seedling-fill"></i></div>
            <h3>Fresh Produce</h3>
            <p class="text-muted">Harvested daily</p>
        </div>
        <div class="col-md-4">
            <div class="feature-icon mx-auto mb-3"><i class="ri-truck-fill"></i></div>
            <h3>Home Delivery</h3>
            <p class="text-muted">Right to your doorstep</p>
        </div>
    </div>
</section>

<!-- Search Bar -->
<section class="container my-5">
    <div class="search-bar d-flex align-items-center">
        <input type="text" class="form-control border-0" placeholder="Search for fresh produce or farmers...">
        <button class="btn btn-success rounded-circle p-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
