
    <% layout('layout') %>  <!-- Extending the layout -->
    <!-- <h1>hello world by ejs</h1> -->
    <style>
        /* Global styles */
        * {
          /* margin: 0;
          padding: 0;
          box-sizing: border-box; */
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
          background-color: #ffffff;
          color: #333;
          /* padding: 20px; */
        }
        
        .container {
          max-width: 1200px;
          margin: 0 auto;
          padding: 0 20px;
        }
        
        /* Hero section */
        
        
        .cta-button {
          background-color: #198754;
          color: white;
          border: none;
          padding: 12px 25px;
          border-radius: 30px;
          font-size: 1rem;
          cursor: pointer;
          text-decoration: none;
          display: inline-block;
        }
        
        /* Categories section */
        .categories {
          padding: 40px 0;
        }
        
        .section-title {
          text-align: center;
          margin-bottom: 30px;
          position: relative;
        }
        
        .section-title h2 {
          font-size: 2rem;
          color: #333;
        }
        
        .section-title::after {
          content: "";
          position: absolute;
          bottom: -10px;
          left: 50%;
          transform: translateX(-50%);
          width: 70px;
          height: 3px;
          background-color: #198754;
        }
        
        .category-cards {
          display: grid;
          grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
          gap: 20px;
        }
        
        .category-card {
          background-color: #f9f9f9;
          border-radius: 8px;
          overflow: hidden;
          box-shadow: 0 3px 10px rgba(0,0,0,0.1);
          transition: transform 0.3s ease;
        }
        
        .category-card:hover {
          transform: translateY(-5px);
        }
        
        .category-image {
          height: 150px;
          background-size: cover;
          background-position: center;
        }
        
        .category-info {
          padding: 15px;
          text-align: center;
        }
        
        .category-info h3 {
          margin-bottom: 10px;
          color: #198754;
        }
        
        /* Featured farmers section */
        .featured-farmers {
          padding: 40px 0;
          background-color: #f5f5f5;
          border-radius: 10px;
          margin: 40px 0;
        }
        
        .farmer-cards {
          display: grid;
          grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
          gap: 25px;
        }
        
        .farmer-card {
          background-color: white;
          border-radius: 8px;
          overflow: hidden;
          box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }
        
        .farmer-header {
          display: flex;
          align-items: center;
          padding: 15px;
          border-bottom: 1px solid #eee;
        }
        
        .farmer-avatar {
          width: 60px;
          height: 60px;
          border-radius: 50%;
          margin-right: 15px;
          background-size: cover;
          background-position: center;
        }
        
        .farmer-info h3 {
          color: #333;
          margin-bottom: 5px;
        }
        
        .farmer-location {
          color: #777;
          font-size: 0.9rem;
          display: flex;
          align-items: center;
        }
        
        .products-grid {
          display: grid;
          grid-template-columns: repeat(2, 1fr);
          gap: 10px;
          padding: 15px;
        }
        
        .product {
          position: relative;
        }
        
        .product-image {
          height: 120px;
          background-size: cover;
          background-position: center;
          border-radius: 5px;
        }
        
        .product-tag {
          position: absolute;
          bottom: 8px;
          left: 8px;
          background-color: rgba(25, 135, 84, 0.9);
          color: white;
          padding: 3px 8px;
          border-radius: 3px;
          font-size: 0.8rem;
        }
        
        .farmer-footer {
          padding: 15px;
          text-align: center;
          border-top: 1px solid #eee;
        }
        
        .view-profile {
          color: #198754;
          text-decoration: none;
          font-weight: 500;
        }
        
        /* How it works section */
        .how-it-works {
          padding: 40px 0;
        }
        
        .steps {
          display: flex;
          justify-content: space-between;
          margin-top: 40px;
        }
        
        .step {
          text-align: center;
          max-width: 250px;
        }
        
        .step-icon {
          width: 80px;
          height: 80px;
          background-color: #198754;
          color: white;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 50%;
          margin: 0 auto 20px;
          font-size: 1.8rem;
        }
        
        .step h3 {
          margin-bottom: 10px;
          color: #333;
        }
        
        /* Search bar - floating */
        
        
        /* Responsive design */
        @media (max-width: 768px) {
          .hero h1 {
            font-size: 2rem;
          }
          
          .steps {
            flex-direction: column;
            align-items: center;
          }
          
          .step {
            margin-bottom: 30px;
          }
        }
      </style>
    </head>
    
    <body>
      <!-- Main Content Only - No Header or Footer -->
      
     
      
      <!-- Product Categories -->
      <section class="categories">
        <div class="container">
          <div class="section-title">
            <h2>Browse by Category</h2>
          </div>
          
          <div class="category-cards">
            <div class="category-card">
              <div class="category-image" style="background-image: url('../images/vegetable.jpg')"></div>
              <div class="category-info">
                <h3>Fresh Vegetables</h3>
                <p>Locally grown, seasonal vegetables</p>
              </div>
            </div>
            
            <div class="category-card">
              <div class="category-image" style="background-image: url('../images/fruits.jpg')"></div>
              <div class="category-info">
                <h3>Organic Fruits</h3>
                <p>Pesticide-free, sweet and fresh</p>
              </div>
            </div>
            
            <div class="category-card">
              <div class="category-image" style="background-image: url('../images/dairy.jpg')"></div>
              <div class="category-info">
                <h3>Dairy Products</h3>
                <p>Farm-fresh milk, cheese, and more</p>
              </div>
            </div>
            
            <div class="category-card">
              <div class="category-image" style="background-image: url('../images/eggs.jpg')"></div>
              <div class="category-info">
                <h3>Free-Range Eggs</h3>
                <p>Ethically produced, nutritious eggs</p>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Featured Farmers -->
      <section class="featured-farmers">
        <div class="container">
          <div class="section-title">
            <h2>Featured Farmers</h2>
          </div>
          
          <div class="farmer-cards">
            <% farmers.forEach(farmer => { %>
                
            <div class="farmer-card">
              <div class="farmer-header">
                <div class="farmer-avatar" style="background-image: url('<%= farmer.image %>')"></div>
                <div class="farmer-info">
                  <h3><%= farmer.first_name %></h3>
                  <div class="farmer-location"><%= farmer.address %></div>
                </div>
              </div>
              <div class="products-grid">
              <% farmer.products.forEach(product => { %>
            
                <div class="product">
                  <div class="product-image" style="background-image: url('<%= product.image %>')"></div>
                  <div class="product-tag"><%= product.name %></div>
                </div>
              <% }) %>
            </div>
              
              <div class="farmer-footer">
                <a href="/farmer" class="view-profile" >View Full Profile â†’</a>
              </div>
              
            </div>
            
                    <% }) %>
          </div>
        </div>
      </section>
      
      <!-- How It Works -->
      
    </body>
